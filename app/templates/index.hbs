<div class="col-md-3">
	<div class="sidebar-nav">
		<div class="list-group">
			<a 	id="all" href="#" 
				{{action "setFilter" "all"}} 
				class="list-group-item">
				Toutes les Startup
			</a>
		</div>
		<h4>Catégories</h4>
		{{view Ptn2015.CategoryMenuView}}
	</div>
</div>
<div class="col-md-9">
	<input  id="startup-search" width="100%" type="text" 
			class="form-control" style="margin-bottom:20px"
			placeholder="Sélectionnez une startup">

	<table class='table table-bordered table-hover'>
		<tr>
			<th></th>
			<th>Startup</th>
			<th>Description</th>
		</tr>
		{{#if selection}}
			{{#each item in selection}}
			<tr>
				<td><img width="70px" height="70px" {{bind-attr src=item.img}}></td>
				<td><a {{bind-attr href=item.url}}>{{item.name}}</a></td>
				<td>{{item.description}}</td>
			</tr>
			{{/each}}
		{{else}}
		{{#each item in model}}
		<tr>
			<td><img width="70px" height="70px" {{bind-attr src=item.img}}></td>
			<td><a {{bind-attr href=item.url}}>{{item.name}}</a></td>
			<td>{{item.description}}</td>
		</tr>
		{{/each}}
		{{/if}}
	</table>
</div>
