<button id="back_category" class="btn btn-primary"
	{{action "backToList"}}>
	<span class="glyphicon glyphicon-arrow-left"></span>
	 Liste des startups
</button>
<br>
<br>
<br>
<div class="well col-lg-12">
	<div class="row" style="padding:20px; padding-top:0px">
		<h1>{{name}}</h1><hr>
		<img class="col-lg-2" {{bind-attr src=img}}></img>
		<div class="col-lg-9">
			<blockquote>
				<p>{{description_long}}</p>
				<a 	{{bind-attr href=url}}
					class="btn btn-default" 
					target="_blank"
					style="margin-top:0">
						Site officiel
				</a>
				<a 	{{bind-attr href=facebook}}
					target="_blank">
					<img src="images/FB-f-Logo__blue_29.png"/>
				</a>
			</blockquote>
		</div>
	</div>
	<br>
	<div class="panel panel-info">
	    <div class="panel-heading">
			<h3 class="panel-title">Modèle économique</h3>
		</div>
		<div class="panel-body">
			{{model_eco}}	
		</div>
	</div>
	<br>
	<div class="panel panel-info">
	    <div class="panel-heading">
			<h3 class="panel-title">L'équipe</h3>
		</div>
		<div class="panel-body">
			{{#each person in team}}
			<div class="col-lg-12" style="padding-top:10px">
				<div class="list-group">
					<div class="list-group-item">
						<div class="row-picture">
							<a target="_blank" {{bind-attr href=person.linkedin}}>
								<img class="circle" {{bind-attr src=person.photo}} alt="icon">
							</a>
						</div>
						<div class="row-content">
							<h4 class="list-group-item-heading">{{person.name}}</h4>
							<p class="list-group-item-text">{{person.job}} - {{person.school}}<br>{{person.description}}</p>
						</div>
					</div>
				</div>
			</div>
			{{/each}}
		</div>
	</div>
	<br>
	<div class="panel panel-info">
	    <div class="panel-heading">
			<h3 class="panel-title">Pourquoi est elle retenue?</h3>
		</div>
		<div class="panel-body">
			{{choice}}
		</div>
	</div>
</div>
